<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaActivity">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Media"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/StopAudio"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/videoView2"
        android:layout_alignTop="@+id/StartAudio"
        android:focusable="true"
        android:onClick="StopAudioBtn"
        android:text="Stop Audio" />

    <Button
        android:id="@+id/StartVideo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/videoView2"
        android:layout_marginBottom="24dp"
        android:focusable="true"
        android:onClick="StartVideoBtn"
        android:text="Start Video" />

    <Button
        android:id="@+id/StopVideo"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/StopAudio"
        android:layout_alignTop="@+id/StartVideo"
        android:focusable="true"
        android:onClick="StopVideoBtn"
        android:text="Stop Video"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/StartAudio"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/StartVideo"
        android:layout_marginTop="220dp"
        android:focusable="true"
        android:onClick="StartAudioBtn"
        android:text="Start Audio"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="487dp" />

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="291dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="40dp" />


</RelativeLayout>